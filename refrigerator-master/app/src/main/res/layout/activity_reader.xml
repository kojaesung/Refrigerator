<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.in_kwonpark.qrcode.ReaderActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual Market"
        android:id="@+id/virtualmarket_btn"
        android:textSize="40sp"
        android:layout_alignBaseline="@+id/shopping_btn"
        android:layout_alignBottom="@+id/shopping_btn"
        android:layout_toLeftOf="@+id/itemlist_btn"
        android:layout_toStartOf="@+id/itemlist_btn"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식자재 목록"
        android:id="@+id/itemlist_btn"
        android:textSize="40sp"
        android:layout_alignBaseline="@+id/scan_btn"
        android:layout_alignBottom="@+id/scan_btn"
        android:layout_alignRight="@+id/shopping_btn"
        android:layout_alignEnd="@+id/shopping_btn" />

    <Button
        android:layout_width="wrap_content"
        android:text="제품 입력"
        android:id="@+id/scan_btn"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColorHighlight="@color/zxing_custom_viewfinder_laser"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/virtualmarket_btn"
        android:layout_alignStart="@+id/virtualmarket_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쇼핑하기"
        android:id="@+id/shopping_btn"
        android:textSize="40sp"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp"
        android:layout_below="@+id/itemlist_btn"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="냉장고야 부탁해"
        android:id="@+id/textView2"
        android:textSize="99sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="@drawable/refrigerator"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>